{
    "global": {
        "ignore": [
            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",
            "vendor/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",

            "**/*.min.*"
        ]
    },

    "jslint": {
        "files": [
            "**/*.js",
            "**/*.json"
        ],
        "ignore": [],
        "rcFile": ".jslintrc"
    },

    "jshint": {
        "files": [
            "**/*.js",
            "**/*.json"
        ],
        "ignore": [],
        "rcFile": ".jshintrc"
    },

    "eslint": {
        "files": [
            "**/*.js"
        ],
        "ignore": [],
        "rcFile": ".eslintrc"
    },

    "csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [],
        "rcFile": ".csslintrc"
    },

    "stylelint": {
        "files": [
            "**/*.css",
            "**/*.scss",
            "**/*.less",
            "**/*.sss"
        ],
        "ignore": [],
        "rcFile": ".stylelintrc"
    },

    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".htmlhintrc"
    },

    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": null
    },

    "bootlint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".bootlintrc.json"
    },

    "markdownlint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".markdownlint.json"
    },

    "remark-lint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".remarkrc"
    },

    "dockerfilelint": {
        "files": [
            "**/*Dockerfile*"
        ],
        "ignore": [],
        "rcFile": ".dockerfilelintrc"
    }
}
