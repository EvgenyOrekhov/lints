{
    "global": {
        "ignore": [
            ".git/**",

            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",
            "vendor/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",
            ".cache/**",

            "build/**",
            "dist/**",
            "tmp/**",

            "**/*.min.*",

            "test/stubs/bad.js"
        ]
    },

    "jslint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/*.yaml",
            "**/*.yml",
            ".remarkrc",
            "**/.dockerfilelintrc"
        ],
        "ignore": [
            "test/stubs/yaml.yaml"
        ],
        "rcFile": ".jslintrc"
    },

    "eslint": {
        "files": [
            "**/*.js",
            "**/*.json"
        ],
        "ignore": [],
        "rcFile": ".eslintrc.json"
    },

    "csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [],
        "rcFile": ".csslintrc"
    },

    "stylelint": {
        "files": [
            "**/*.css",
            "**/*.scss",
            "**/*.less",
            "**/*.sss"
        ],
        "ignore": [],
        "rcFile": ".stylelintrc"
    },

    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".htmlhintrc"
    },

    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": null
    },

    "bootlint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".bootlintrc.json"
    },

    "markdownlint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".markdownlint.json"
    },

    "remark-lint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".remarkrc"
    },

    "dockerfilelint": {
        "files": [
            "**/*Dockerfile*"
        ],
        "ignore": [
            "test/linters/dockerfilelint.js",
            "src/linters/dockerfilelint.js",
            ".dockerfilelintrc",
            "test/stubs/.dockerfilelintrc"
        ],
        "rcFile": ".dockerfilelintrc"
    }
}
