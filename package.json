{
    "name": "lints",
    "version": "18.0.0",
    "description": "Lint all your JavaScript, CSS, HTML, Markdown and Dockerfiles with a single command",
    "keywords": [
        "lint",
        "linter",
        "static code analysis",
        "analysis",
        "analyser",
        "checker",
        "validation",
        "validator",
        "jslint",
        "jshint",
        "eslint",
        "csslint",
        "stylelint",
        "htmlhint",
        "w3cjs",
        "bootlint",
        "markdownlint",
        "remark-lint",
        "w3c",
        "javascript",
        "js",
        "css",
        "html",
        "markdown",
        "dockerfile",
        "dockerfilelint"
    ],
    "scripts": {
        "lint": "./bin/lints",
        "pretest": "npm run lint",
        "test": "tap 'test/*.js' 'test/linters/**/*.js' --cov --jobs=4",
        "posttest": "tap --coverage-report=text-summary && tap --coverage-report=html",
        "tap": "tap"
    },
    "bin": {
        "lints": "./bin/lints"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EvgenyOrekhov/lints.git"
    },
    "author": {
        "name": "Evgeny Orekhov",
        "url": "https://plus.google.com/+ЕвгенийОрехов"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/EvgenyOrekhov/lints/issues"
    },
    "homepage": "https://github.com/EvgenyOrekhov/lints#readme",
    "dependencies": {
        "bluebird": "^3.5.5",
        "bootlint": "^0.16.6",
        "chalk": "^2.4.2",
        "csslint": "^1.0.5",
        "dockerfilelint": "^1.5.0",
        "eslint": "^5.16.0",
        "globby": "^9.2.0",
        "htmlhint": "^0.11.0",
        "js-yaml": "^3.13.1",
        "jshint": "^2.10.2",
        "jslint-node": "^1.2.8",
        "markdownlint": "^0.14.2",
        "ramda": "^0.26.1",
        "remark": "^10.0.1",
        "remark-lint": "^6.0.4",
        "remark-preset-lint-consistent": "^2.0.2",
        "remark-preset-lint-recommended": "^3.0.2",
        "stylelint": "^10.0.1",
        "stylelint-config-standard": "^18.3.0",
        "w3cjs": "^0.4.0",
        "wordwrap": "^1.0.0"
    },
    "files": [
        "bin/",
        "src/"
    ],
    "devDependencies": {
        "ansi-styles": "^4.0.0",
        "eslint-config-hardcore-fp": "^5.3.0",
        "eslint-plugin-import": "^2.17.3",
        "nock": "^10.0.6",
        "tap": "^12.7.0"
    }
}
