{
    "extends": "hardcore-fp",

    "env": {
        "node": true
    },

    "rules": {
        "complexity": [
            "error",
            5
        ],
        "id-length": [
            "error",
            {
                "exceptions": [
                    "R",
                    "t"
                ]
            }
        ],

        "fp/no-mutation": [
            "error",
            {
                "commonjs": true,
                "exceptions": [
                    {
                        "object": "process",
                        "property": "exitCode"
                    }
                ]
            }
        ]
    }
}
